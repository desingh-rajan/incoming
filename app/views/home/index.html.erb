<h1>Welcome</h1>
<div class="row">
  <div class="col-md-4">
    <table class="table">
      <thead>
      <tr>
        <th colspan="1">Production</th>
        <th colspan="1">Quantity</th>
      </tr>
      </thead>

      <tbody>
      <% @products.each do |product| %>
          <tr>
            <td><%= product.name %></td>
            <td><%= product.quantity %></td>
          </tr>
      <% end %>
      </tbody>
    </table>


  </div>
  <div class="col-md-4">
  </div>

  <div class="col-md-4">
    <%= form_for :product, url: add_products_path do |f| %>
        <p>
          <%= f.label :name %><br>
          <%= f.text_field :name %>
        </p>

        <p>
          <%= f.label :quantity %><br>
          <%= f.text_field :quantity %>
        </p>

        <p>
          <%= f.submit 'Add' %>
        </p>
    <% end %>
  </div>
</div>